!!! 5
%html

  %head
    %title= "Twilio example"

  %body
    %h1= "Twilio example"

    %h2= "Send SMS"
    %form{action: 'sms', method: 'POST'}
      = '+'
      %input{type: 'text', name: 'to'}
      %input{type: 'submit', value: 'Send SMS'}

    %h2= "Call"
    %form{action: 'call', method: 'POST'}
      = '+'
      %input{type: 'text', name: 'to'}
      %input{type: 'submit', value: 'Call'}